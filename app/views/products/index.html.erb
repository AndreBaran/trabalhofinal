<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Amount</th>
      <th>Value</th>
      <th>Sale</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.amount %></td>
        <td><%= product.value %></td>
        <td><%= product.sale %></td>
        <td><%= link_to 'Show', sale_product_path(@sale, product) %></td>
        <td><%= link_to 'Edit', edit_product_path(@sale, product) %></td>        
        <td><%= link_to 'Destroy', sale_product_path(@sale, product), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_sale_product_path(@sale) %>

